<li class="wrap">
	<div class="wrap-item">
		<%= link_to post_path(post) do %>
		<div class="wrap-item-name"><span class="test">[<%= post.user.id %>]<%= post.user.name %></span></div>
		<div class="wrap-item-text"><span class="test">"<%= post.text %>"</span></div>
		<div class="wrap-item-time"><span class="test">
		<div class="wrap-item-counts"><span class="test">♡<%= post.favorites.count %> ※<%= post.comments.count%>  <%= post.created_at.strftime("%Y/%m/%d") %><% end %></span><span class="favorite-button"><%= render "favorites/show", {post: post} %></span></div>
	</div>
</li>
