<meta  name=”viewport” content=”width=device-width,initial-scale=1.0″>

<body>
	<header>
		<div class="header">
			<div class="header-logo">Mini-Twitter</div>
				<div class="header-list">
			
				<% if user_signed_in? %>
					<ul>
						<li><%= link_to "新規投稿", new_post_path %></li>
						<li><%= current_user.name %>(<%= current_user.email %>)</li>
						<li><%= button_to "ログアウト", destroy_user_session_path, method: :delete %></li>
					</ul>

				<% else %>
					<ul>
						<li><%= link_to "ログイン", new_user_session_path %></li>
						<li><%= link_to "会員登録", new_user_registration_path %></li>
					</ul>
					
				<% end %>
				</div>
			</div>
		</div>

		<div class="main">
			<h3 class="section-title">posts</h3>
			<div class="contents">
				<div class="contents-item"><%= render partial: "show", collection: @posts, as: "post" %></div>
			</div>
			<% if user_signed_in? %>
			<h3 class="section-title">favorites</h3>
			<div class="contents">
				<div class="contents-item"><%= render partial: "show", collection: @favorite_posts, as: "post" %></div>
			</div>
			<% end %>
		</div>

	<header>
</body>