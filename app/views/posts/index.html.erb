<% if user_signed_in? %>
<h1>hello! <%= current_user.name %>(<%= current_user.email %>).</h1>
<%= button_to "sign out", destroy_user_session_path, method: :delete %>
<%= link_to "new", new_post_path %>
<% else %>
<h1>hello! guest.</h1>
<%= link_to "log in", new_user_session_path %>
<%= link_to "sign up", new_user_registration_path %>
<% end %>

<ul>
	<h4>posts</h4>
	[id]name."text"
	<% @posts.each do |post| %>
		<li><a href="/posts/<%= post.id %>">
			[<%= post.user.id %>]<%= post.user.name %>."<%= post.text %>"
		</li></a>
	<% end %>
	<% if user_signed_in? %>
		<h4>favorites</h4>
		[id]name."text"
		<% @favorite_lists.each do |list| %>
			<li><a href="/posts/<%= list.post.id %>">
				[<%= list.post.user.id %>]<%= list.post.user.name %>."<%= list.post.text %>"
			</li></a>
		<% end %>
	<% end %>
</ul>
