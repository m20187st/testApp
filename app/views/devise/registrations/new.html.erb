<main>
    <div class="wrapper-flex">
        <div class="devise-contents">
          <h2 class="devise-title">新規登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form">
                  <div>
                      <div class="form-content">
						  <%= f.label :name, "名前", class: "form-label" %>
    					  <%= f.text_field :name, autofocus: true, class: "form-input" %>
                      </div>
                      <div class="form-content">
                    	  <%= f.label :email, "メールアドレス", class: "form-label" %>
						  <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
					  </div>
                      <div class="form-content">
						  <%= f.label :password, "パスワード", class: "form-label" %>
						  <% if false %>
							<% if @minimum_password_length %>
							<em>(<%= @minimum_password_length %> characters minimum)</em>
							<% end %>
						  <% end %>
						  <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
                      </div>
                      <div class="form-content">
						  <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
						  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
                      </div>
                  </div>
              </div>
              <div class="">
				  <%= f.submit "登録", class: "btn-submit" %>
              </div>
          <% end %>
          <div class="btn-return">
			  <%= link_to "戻る", root_path %>
          </div>
        </div>
    </div>
</main>
